{
    "name": "@chainsafe/bls-keygen",
    "version": "0.3.0",
    "description": "Typescript key management tool that works in the browser",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "yarn run test:node && yarn run test:web",
        "test:node": "mocha -r ts-node/register test/**/*.spec.ts ",
        "test:web": "karma start",
        "clean": "rm -rf lib",
        "lint": "eslint --ext .ts src/",
        "check-types": "tsc --noEmit",
        "prepublishOnly": "yarn run build",
        "prebuild": "yarn run clean",
        "build": "yarn run build:lib && yarn run build:types",
        "build:lib": "babel src -x .ts -d lib --source-maps",
        "build:types": "tsc --emitDeclarationOnly --declaration --outDir lib -p tsconfig.build.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ChainSafe/bls-keygen.git"
    },
    "author": "ChainSafe Systems",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/ChainSafe/bls-keygen/issues"
    },
    "homepage": "https://github.com/ChainSafe/bls-keygen#readme",
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.3",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/register": "^7.0.0",
        "@types/bn.js": "^4.11.5",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^12.0.10",
        "@types/randombytes": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^1.3.0",
        "@typescript-eslint/parser": "^1.3.0",
        "chai": "^4.2.0",
        "eslint": "5.16.0",
        "eslint-plugin-import": "^2.18.2",
        "karma": "^4.4.1",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-cli": "^2.0.0",
        "karma-mocha": "^1.3.0",
        "karma-spec-reporter": "^0.0.32",
        "karma-webpack": "^4.0.2",
        "mocha": "^6.1.4",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.1",
        "webpack": "^4.41.2"
    },
    "dependencies": {
        "@chainsafe/bls-hd-key": "^0.2.0",
        "bip39": "^3.0.2",
        "buffer": "^5.4.3",
        "randombytes": "^2.1.0"
    }
}
