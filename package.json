{
    "name": "bls-ts-key-mgmt",
    "version": "0.0.1",
    "description": "Typescript key management tool that works in the browser",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test": "mocha -r ts-node/register test/**/*.test.ts ",
        "clean": "rm -rf lib",
        "lint": "eslint --ext .ts src/",
        "check-types": "tsc --noEmit",
        "prebuild": "yarn run clean",
        "build": "yarn run build:lib && yarn run build:types",
        "build:lib": "babel src -x .ts -d lib --source-maps",
        "build:types": "tsc --emitDeclarationOnly --declaration --outDir lib -p tsconfig.build.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ChainSafe/bls-ts-key-mgmt.git"
    },
    "author": "ChainSafe Systems",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/ChainSafe/bls-ts-key-mgmt/issues"
    },
    "homepage": "https://github.com/ChainSafe/bls-ts-key-mgmt#readme",
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.3",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/register": "^7.0.0",
        "@types/bn.js": "^4.11.5",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^12.0.10",
        "@typescript-eslint/eslint-plugin": "^1.3.0",
        "@typescript-eslint/parser": "^1.3.0",
        "chai": "^4.2.0",
        "codecov": "^3.1.0",
        "eslint": "5.16.0",
        "eslint-plugin-import": "^2.18.2",
        "mocha": "^6.1.4",
        "nyc": "^14.1.1",
        "ts-node": "^8.3.0",
        "typedoc": "^0.15.0",
        "typedoc-plugin-external-module-name": "^2.1.0",
        "typedoc-plugin-internal-external": "^2.0.2",
        "typedoc-plugin-markdown": "^2.0.6",
        "typescript": "^3.5.1",
        "webpack": "^4.39.1"
    },
    "dependencies": {
        "assert": "^2.0.0",
        "bcrypto": "^4.2.6",
        "bip39": "^3.0.2",
        "bn.js": "^5.0.0",
        "buffer": "^5.4.3"
    }
}
